<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/start_play"
        android:layout_width="@dimen/player_play_btn_size"
        android:layout_height="@dimen/player_play_btn_size"
        android:background="@drawable/c_video_video_play_bg"
        android:layout_gravity="center"
        android:src="@drawable/c_video_ic_video_controller" />

    <ProgressBar
        android:id="@+id/loading"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:indeterminateDrawable="@drawable/c_video_video_loading"
        android:visibility="gone"
        tools:visibility="visible" />

    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_gravity="end"
        android:layout_margin="4dp"
        android:src="@drawable/c_video_video_close" />

    <ImageView
        android:id="@+id/btn_skip"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_margin="4dp"
        android:src="@drawable/c_video_video_full_screen" />

</FrameLayout>